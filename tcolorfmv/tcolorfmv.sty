% ==== Définition générique ==== ChatGPT 24/09/25
\newcommand{\mynewminted}[3]{%
  \newminted[#1]{#2}{#3}%
  \tcbset{%
    #2 fontsize/.store in=\currentfontsize,
    #2 fontsize=\small,
    myminted/#1/.style={%
      minted language=#2,
      minted options={#3, breaklines, escapeinside=!!, fontsize=\currentfontsize}%
    }%
  }%
}

% ==== Instanciations ====
