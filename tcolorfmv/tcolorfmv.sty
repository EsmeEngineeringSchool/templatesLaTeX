% Pour les td d'Unix
\newcommand{\mynewmintedconsole}[2]{%
  \newminted[#1]{console}{#2}%
  \tcbset{myminted/#1/.style={minted language=console,minted options={#2,breaklines}}}}
\newcommand{\mynewmintedbash}[2]{%
  \newminted[#1]{bash}{#2}%
  \tcbset{myminted/#1/.style={minted language=bash,minted options={#2,breaklines}}}}

\mynewmintedbash{rbash}{tabsize=4,fontsize=\small}
\mynewmintedconsole{rconsole}{tabsize=4,fontsize=\small}

